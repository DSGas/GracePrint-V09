<%- include('../partials/header.ejs') %>
<div class='container'>
<form action='/print/<%= print._id %>?_method=PUT' method='POST' enctype="multipart/form-data">
    <div class="mb-3">
        <label class="form-label">Name</label>
        <input type="text" class="form-control" name='print[name]' placeholder="<%= print.name %>", value="<%= print.name %>">
    </div>
    <div class="mb-3">
        <label class="form-label">Artist</label>
        <input type="text" class="form-control" name='print[artist]' placeholder="<%= print.artist %>", value="<%= print.artist %>">
    </div>
    <div class="mb-3">
        <label class="form-label">Image</label>
        <img src='<%= print.image %>' height = '300px'>
        <p></p>
        <input type="file" class="form-control" name='image' accept='image/*'>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
    <a href='/print'>Go back</a>
</form>
</div>
<%- include('../partials/footer.ejs') %>